<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BezelImageView">
        <attr name="maskDrawable" format="reference" />
        <attr name="borderDrawable" format="reference" />
        <attr name="desaturateOnPress" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ODrawerScrollView">
        <attr name="_insetForeground" format="reference|color" />
    </declare-styleable>

    <!-- Custom Controls -->
    <declare-styleable name="OField">
        <attr name="fieldName" format="string" />
        <attr name="iconResource" format="reference" />
        <attr name="readonly" format="boolean" />
        <attr name="showIcon" format="boolean" />
        <attr name="showLabel" format="boolean" />
        <attr name="iconTint" format="reference|color" />
        <attr name="parsePattern" format="string" />
        <attr name="withOutSidePadding" format="boolean" />
        <attr name="fieldType">
            <enum name="Text" value="0" />
            <enum name="Boolean" value="1" />
            <enum name="ManyToOne" value="2" />
            <enum name="Chips" value="3" />
            <enum name="Selection" value="4" />
            <enum name="Date" value="5" />
            <enum name="DateTime" value="6" />
            <enum name="Blob" value="7" />
            <enum name="Time" value="8" />
            <enum name="Integer" value="9" />
            <enum name="Float" value="10" />
        </attr>
        <attr name="widgetType">
            <enum name="Switch" value="0" />
            <enum name="RadioGroup" value="1" />
            <enum name="SelectionDialog" value="2" />
            <enum name="Searchable" value="3" />
            <enum name="SearchableLive" value="4" />
            <enum name="Image" value="5" />
            <enum name="ImageCircle" value="6" />
            <enum name="Duration" value="7" />
        </attr>
        <attr name="widgetImageSize" format="dimension" />
        <attr name="withBottomPadding" format="boolean" />
        <attr name="withTopPadding" format="boolean" />
        <attr name="controlLabel" format="string|reference" />
        <attr name="defaultFieldValue" format="reference|string" />
        <attr name="defaultImage" format="reference" />
        <attr name="valueArray" format="reference" />
        <attr name="fieldTextAppearance" format="reference" />
        <attr name="fieldTextSize" format="dimension" />
        <attr name="fieldTextColor" format="color" />
        <attr name="fieldLabelColor" format="color" />
        <attr name="fieldLabelTextAppearance" format="reference" />
        <attr name="fieldLabelSize" format="dimension" />
        <attr name="barcodeColumn" format="string" />
        <attr name="barcodeFormat">
            <flag name="AllFormats" value="0" />
            <flag name="Code128" value="1" />
            <flag name="Code39" value="2" />
            <flag name="Code93" value="4" />
            <flag name="Codabar" value="8" />
            <flag name="DataMatrix" value="16" />
            <flag name="Ean13" value="32" />
            <flag name="Ean8" value="64" />
            <flag name="Itf" value="128" />
            <flag name="QrCode" value="256" />
            <flag name="UpcA" value="512" />
            <flag name="UpcE" value="1024" />
            <flag name="Pdf417" value="2048" />
            <flag name="Aztec" value="4096" />
        </attr>
    </declare-styleable>
    <declare-styleable name="OForm">
        <attr name="editableMode" format="boolean" />
        <attr name="modelName" format="string" />
        <attr name="autoUIGenerate" format="boolean" />
        <attr name="controlIconTint" format="color" />
    </declare-styleable>
    <declare-styleable name="FloatingActionButton">
        <attr name="drawable" format="integer" />
        <attr name="fabColor" format="color" />
        <attr name="shadowRadius" format="float" />
        <attr name="shadowDx" format="float" />
        <attr name="shadowDy" format="float" />
        <attr name="shadowColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="MailChatterView">
        <attr name="resModelName" format="string" />
    </declare-styleable>
</resources>
